{
  "hosting": {
    "site": "mkd-01",
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  },
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "**",
      "destination": "/index.html"
    }
  ],
  "functions": [
    {
      "source": "functions/functions-hw",
      "codebase": "helloworld",
      "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log", "*.local"]
    },
    {
      "source": "functions/mtpl",
      "codebase": "mtpl",
      "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log", "*.local"]
    },
    {
      "source": "functions/fool",
      "codebase": "fool",
      "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log", "*.local"]
    },
    {
      "source": "functions/ft",
      "codebase": "ft",
      "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log", "*.local"]
    },
    {
      "source": "functions/cnn",
      "codebase": "cnn",
      "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log", "*.local"]
    },
    {
      "source": "functions/dd",
      "codebase": "dd",
      "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log", "*.local"]
    },
    {
      "source": "functions/nt",
      "codebase": "nt",
      "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log", "*.local"]
    },
    {
      "source": "functions/ada",
      "codebase": "ada",
      "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log", "*.local"]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
